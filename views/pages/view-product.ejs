<%- include('../partials/header.ejs')%>
    <div class="container">
        <div class="page-inner">
            <div class="page-header">
                <h3 class="fw-bold mb-3">View Product Page</h3>
                <ul class="breadcrumbs mb-3">
                    <li class="nav-home">
                        <a href="#">
                            <i class="icon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">Poduct</a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="#">View Product</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">View Product Details</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">SR No.</th>
                                        <th scope="col">Category Name</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Add Cart</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let count = 0;
                                        products.map((product,index) => { 
                                        let {image,name,price,id,categoryId} = product  
                                        count++  
                                    %>
                                    <tr>
                                        <td><%= count %></td>
                                        <td><%= categoryId ? categoryId.categoryName : 'N/A' %></td>
                                        <td>
                                            <img class="rounded-circle" src="../<%= image %>" alt="<%= name %>" height="150px" width="150px">
                                        </td>
                                        <td><%= name %></td>
                                        <td><i class="fas fa-rupee-sign"></i> <%= price %></td>
                                        <td>
                                        <form action="/user/cart/add" method="POST">
                                            <div class="d-flex justify-content-evenly">
                                                <div class="col-7">
                                                    <input type="hidden" name="productId" value="<%= product._id %>" class="form-control">
                                                    <input type="number" name="quantity" value="1" min="1" class="form-control" required>
                                                </div>
                                                <div>
                                                    <button type="submit" class="btn btn-success">Add to Cart</button>
                                                </div>
                                            </div>
                                        </form>
                                        </td>
                                        <td> 
                                            <a href="./delete-product/<%= id %>" class="btn btn-outline-danger">Delete</a>
                                            <a href="./edit-product/<%= id %>" class="btn btn-outline-warning">Edit</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>