<%- include('../partials/header.ejs')%>
  <div class="container">
    <div class="page-inner">
      <div class="page-header">
        <h3 class="fw-bold mb-3">Add Cart Page</h3>
        <ul class="breadcrumbs mb-3">
          <li class="nav-home">
            <a href="/">
              <i class="icon-home"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-arrow-right"></i>
          </li>
          <li class="nav-item">
            <a href="javascript:void(0)">Cart</a>
          </li>
          <li class="separator">
            <i class="icon-arrow-right"></i>
          </li>
          <li class="nav-item">
            <a href="javascript:void(0)">View Cart</a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-xl-12">
          <div class="card">
            <div class="card-header">
              <div class="card-title">View Cart Details</div>
            </div>
            <div class="card-body">
              <% if (cart.length> 0) { %>
                <table class="table table-hover text-center">
                  <thead>
                    <tr>
                      <th scope="col">SR No.</th>
                      <th scope="col">Product</th>
                      <th scope="col">Price</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Total</th>
                    </tr>
                  </thead>
                  <% let count=0; cart.forEach(item=> {
                    count++
                    %>
                    <tr>
                      <td>
                        <%= count %>
                      </td>
                      <td>
                        <%= item.productId.name %>
                      </td>
                      <td><i class="fas fa-rupee-sign"></i>
                        <%= item.productId.price %>
                      </td>
                      <td>
                        <%= item.quantity %>
                      </td>
                      <td><i class="fas fa-rupee-sign"></i>
                        <%= item.productId.price %>
                      </td>
                    </tr>
                    <tr>
                      <td colspan="5" class="text-end">
                        <strong>Total Amount: </strong> <i class="fas fa-rupee-sign"></i>
                        <%= cart.reduce((total, item)=> total + item.productId.price * item.quantity, 0) %>
                      </td>
                    </tr>
                    <% }); %>
                      </tbody>
                </table>
                <% } else { %>
                  <p>Your cart is empty.</p>
                  <% } %>
            </div>
          </div>
          <div class="text-center">
            <a href="/product/view-product" class="btn btn-primary fs-5">Continue Shopping <i class="fas fa-angle-right"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer.ejs')%>